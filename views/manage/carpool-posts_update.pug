extends ../layout.pug

block content
    #form
        form(action=`/api/manage/carpool-posts/update/${post.id}` method=`post`)
            input(type=`hidden` name=`id` value=`${post.id}`)
            p
                span 경로: 
                input(type="text" name="origin" placeholder="origin")
                span ->
                input(type="text" name="destination" placeholder="destination")
            p
                span 시간:
                input(type="text" name="month" placeholder="month")
                span 월 
                input(type="text" name="day" placeholder="day")
                span 일 
                input(type="text" name="hour" placeholder="hour")
                span 시 
                input(type="text" name="min" placeholder="min")
                span 분
            p
                p 장소, 하고싶은말:
                textarea(name="description" placeholder="description") #{post.description}
            p
                input(type="submit")