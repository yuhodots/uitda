extends layout.pug

block menu
    h3 Carpool
    #create
        a(href='/view/manage/carpool-posts/create') [글쓰기]
    #list
        -if(postlist != undefined)
            ul
                -for(i = 0; i < postlist.length; i++)
                    li
                        p [#{postlist[i].start}] #{postlist[i].title}
                        form(action=`/view/carpool/delete` method=`post`)
                            input(type=`hidden` name=`id` value=`${postlist[i].id}`)
                            input(type=`submit` value=`delete`)
                        a(href=`/view/manage/carpool-posts/update/${postlist[i].id}`) update
