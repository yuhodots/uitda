extends ../layout.pug

block content
    -if(user)
        p You are already logged in.
    -else
        h1 Login
        form(action="/api/login" method="post")
            p
                input(type="text" name="username" placeholder="username")
            p
                input(type="password" name="password" placeholder="password")
            p
                input(type="submit")
            p  
                a(href='/api/login/register') [register]
    